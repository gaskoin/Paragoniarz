<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Paragoniarz.UI"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             x:DataType="vm:ErrorViewModel"
             x:Class="Paragoniarz.UI.ErrorView">
    <ScrollViewer>
        <StackPanel>
            <TextBlock Margin="10" HorizontalAlignment="Center" FontSize="20" Foreground="Red" Text="Błąd"/>
            <TextBox Margin="10" Text="{Binding ThrownException}" x:CompileBindings="False"/>
            <Button Margin="10" Content="Ok" Command="{Binding CloseCommand}" x:CompileBindings="False" HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
